<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.4" client="site" method="upgrade">
   <name>Slider</name>
	<version>1.0.0</version>
	<creationDate>4/8/2015</creationDate>
	<author>Miguel Angel Zapatero</author>
	<authorEmail>miguel@bladis.com</authorEmail>
	<copyright>Copyright (C) 2005 - 2015 Open Source Matters, Inc. All rights reserved.</copyright>
	<description>A simple module to show a slider with the materialize framework.</description>

   <files>
      <filename module="mod_slider">mod_slider.php</filename>
      <filename>mod_slider.xml</filename>
      <folder>tmpl</folder>
   </files>
   <config>
      <fields name="params">
         <fieldset name="slider1" label="Primer Slide">
            <field
				 name="show_slide_1"
				 type="radio"
				 default="1"
				 class="btn-group btn-group-yesno"
   			 label="Mostrar Slide"
				 description="Selecciona si se muestra el slide"
				>
               <option value="1">JSHOW</option>
               <option value="0">JHIDE</option>
				</field>
            <field
             name="title_1"
             type="text"
             label="Titulo"
             description="Introduce un titulo para el Slide"
             size="10"
            />
            <field
             name="url_slide_1"
             type="url"
             default=""
             label="Enter a URL"
             description=""
             size="10"
            />
            <field
             name="slogan_1"
             type="text"
             label="Subtitulo"
             description="Introduce un slogan"
             size="10"
            />
            <field
				 name="imageslider_1"
				 type="media"
				 label="Imagen"
				 description="Selecciona una imagen"
				 directory="slider"
				/>
         </fieldset>
      </fields>
   </config>
</extension>
